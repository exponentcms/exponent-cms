<h2>{'Configure Toggle View'|gettext}</h2>
{control type="checkbox" name="show_collapsed" label="Initially display as collapsed on all devices?"|gettext checked=$config.show_collapsed|default:0 value=1}
{control type="checkbox" name="show_collapsed_mobile" label="Initially display as collapsed on mobile devices?"|gettext checked=$config.show_collapsed_mobile|default:0 value=1}
{*control type=text name="summary_height" label="Summary Height"|gettext value=$config.summary_height|default:0 size="3"*}
{control type="checkbox" name="show_summary" label="Show Summary when Collapsed?"|gettext value=1 checked=$config.show_summary}
{control type="checkbox" name="hide_date" label="Hide date of item?"|gettext checked=$config.hide_date|default:0 value=1}
{control type="checkbox" name="hide_tags" label="Hide tags of item?"|gettext checked=$config.hide_tags|default:0 value=1}
