<h2>{"Configure Search Form View"|gettext}</h2>
{control type="text" name="inputtext" label="Input Text"|gettext value=$config.inputtext|default:"Keywords"}
{*control type="text" name="buttontext" label="Button Text"|gettext value=$config.buttontext|default:"Search"*}
{control type="text" name="eventlimit" label="Limit Event Results"|gettext value=$config.eventlimit|default:"30" description='All future events and number of days in the past'|gettext}
{control type="checkbox" name="only_best" label="Limit results to word matches?"|gettext checked=$config.only_best|default:0 value=1 description='Removes partial phrase matches'|gettext}
{control type="checkbox" name="is_categorized" label="Group results on each page by type?"|gettext checked=$config.is_categorized|default:0 value=1}
